<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/browser_actions_text_color">


    <GridLayout
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="529dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="141dp"
        android:layout_weight="8"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:columnOrderPreserved="false"
        android:padding="14dp"
        android:rowCount="3">


        <androidx.cardview.widget.CardView
            android:id="@+id/cv1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="85dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="2dp"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="149dp"
                    android:layout_height="99dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/karthik"
                    tools:ignore="NestedWeights" />

                <TextView
                    android:layout_width="138dp"
                    android:layout_height="29dp"
                    android:text="Karthik"
                    android:textAlignment="center"
                    android:textColor="#121211"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView

            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="80dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="2dp"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="149dp"
                    android:layout_height="99dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/maneesh"
                    tools:ignore="NestedWeights" />

                <TextView
                    android:layout_width="138dp"
                    android:layout_height="29dp"
                    android:text="Manish"
                    android:textAlignment="center"
                    android:textColor="#121211"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="85dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="2dp"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="149dp"
                    android:layout_height="99dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/basha"
                    tools:ignore="NestedWeights" />

                <TextView
                    android:layout_width="138dp"
                    android:layout_height="29dp"
                    android:text="Basha"
                    android:textAlignment="center"
                    android:textColor="#121211"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="80dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="2dp"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageView8"
                    android:layout_width="149dp"
                    android:layout_height="99dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/nithin"
                    tools:ignore="NestedWeights" />

                <TextView
                    android:layout_width="138dp"
                    android:layout_height="29dp"
                    android:text="Nithin"
                    android:textAlignment="center"
                    android:textColor="#121211"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView

            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="80dp"

            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="2dp"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView

                    android:layout_width="149dp"
                    android:layout_height="99dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/vinay"
                    tools:ignore="NestedWeights" />

                <TextView
                    android:layout_width="138dp"
                    android:layout_height="29dp"
                    android:text="Vinay"
                    android:textAlignment="center"
                    android:textColor="#121211"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </GridLayout>

    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-0205521656322088/8726244166" />

    <TextView
        android:id="@+id/marquee"
        android:layout_width="353dp"
        android:layout_height="119dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:gravity="center"
        android:ellipsize="marquee"
        android:text="Developers Board"
        android:textSize="43dp"
        android:focusable="true"
        android:fadingEdge="horizontal"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:scrollHorizontally = "true"
        android:singleLine = "true"
        android:marqueeRepeatLimit="marquee_forever"/>


</RelativeLayout>